// Prisma schema for SQL practice app
// SQLiteを使用した学習用データベース

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ユーザーテーブル（サンプル）
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  age       Int?
  createdAt DateTime @default(now())
  posts     Post[]
}

// 投稿テーブル（サンプル）
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}
